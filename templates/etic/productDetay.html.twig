{% extends 'baseEtic.html.twig' %}
{% block mainTitle %} Yönetim Paneli{% endblock %}
{% block body %}

    <div class="row bg-title">
        <!-- .page title -->
        <div class="col-sm-4 col-xs-12">
            {% if title is defined %}
                <h4 class="page-title">{{ title }}</h4>
            {% endif %}
        </div>
        <!-- /.page title -->
        <!-- .breadcrumb -->
        <div class="col-sm-4 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="#">Anasayfa</a></li>
                {% if title is defined %}
                    <li class="active">{{ title }}</li>
                {% endif %}
            </ol>
        </div>
        <!-- /.breadcrumb -->
        <div class="col-sm-4 col-xs-12 text-right">
        </div>
    </div>

<div class="row">
    <div class="col-md-12">
        <div class="white-box">
            <h1 class="box-title" >Adı: {{ product.name }}</h1>
            <h2 class="box-title" >Fiyat: {{ product.price }}</h2>
            <h2 class="box-title" >İndirim: {{ product.discount }}</h2>
            <h3 class="box-title" >Stok adeti: {{ product.quantity }}</h3>
            <p class="box-title" ><b>Açıklama:</b> {{ product.description }}</p>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{% endblock %}